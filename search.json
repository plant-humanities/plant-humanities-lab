---
layout: null
permalink: /search.json
---
[
  {% for post in site.articles %}
  {
    "title":   {{ post.title   | jsonify }},
    "url":     {{ post.url     | relative_url | jsonify }},
    "excerpt": {{ post.excerpt 
                   | strip_html 
                   | strip_newlines 
                   | truncate: 1000
                   | jsonify }},
    "content": {{ post.content 
                   | strip_html 
                   | strip_newlines 
                   | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]